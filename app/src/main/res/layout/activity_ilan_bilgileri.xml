<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffeaa7"
    tools:context=".IlanBilgileri">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginBottom="15dp"
        android:textColor="#203040"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="İlan Bilgilerini Giriniz"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#203040"
        android:id="@+id/ilanBaslikEditText"
        android:hint="İlan Başlığını Giriniz"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#203040"
        android:id="@+id/ilanAciklamaEditText"
        android:hint="İlan Açıklamasını Giriniz"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="İleri"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/ilanBilgiButton"
        android:background="@drawable/menu_buton_back"/>

</LinearLayout>