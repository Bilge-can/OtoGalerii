<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeaa7"
    android:orientation="vertical"
    tools:context=".Yakit">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginBottom="15dp"
        android:textColor="#203040"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Yakıt Tüketimi Bilgilerini Giriniz"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#203040"
        android:id="@+id/yakitTipiBilgiEditText"
        android:hint="Yakıt Tipi Giriniz"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#203040"
        android:id="@+id/ortalamaYakitBilgiEditText"
        android:hint="Ortalama Yakıt Bilgisi Giriniz"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#203040"
        android:id="@+id/depoHacmiBilgiEditText"
        android:hint="Depo Hacmi Giriniz"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="İlan Ver"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/yakitTüketimBilgisiButton"
        android:background="@drawable/menu_buton_back"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Geri"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/yakitTüketimBilgisiButtonGeri"
        android:background="@drawable/menu_buton_back"/>

</LinearLayout>